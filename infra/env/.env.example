# Example environment variables

# General application settings
APP_NAME=diabetes-bot
DEBUG=False

# Database configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/diabetes
DB_HOST=localhost
DB_PORT=5432
DB_NAME=diabetes
DB_USER=postgres
DB_PASSWORD=postgres

# JWT settings
JWT_SECRET=change-me
JWT_EXPIRE_DAYS=7

# Optional service URLs
WEBAPP_URL=http://localhost:3000
API_URL=http://localhost:8000
# Base path for the web app; used by both frontend and backend. Defaults to /ui/
UI_BASE_URL=/ui/
# Base API path for the webapp; defaults to '/api'.
# Set to a full URL without a trailing '/' when using an external API.
VITE_API_BASE=/api
# VITE_API_BASE=http://localhost:8000/api

# OpenAI configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_ASSISTANT_ID=your-openai-assistant-id
OPENAI_PROXY=  # e.g., http://proxy.local:8080

# Custom font directory
FONT_DIR=infra/fonts

# Telegram
TELEGRAM_TOKEN=your-telegram-bot-token
